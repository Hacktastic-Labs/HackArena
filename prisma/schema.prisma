generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
id              String   @id @default(cuid())
email           String   @unique
username        String   @unique
firstName       String   @map("first_name")
lastName        String   @map("last_name")
passwordHash    String   @map("password_hash")
githubUsername  String?  @map("github_username")
linkedinUrl     String?  @map("linkedin_url")
portfolioUrl    String?  @map("portfolio_url")

role            UserRole @default(PARTICIPANT)
createdAt       DateTime @default(now()) @map("created_at")
updatedAt       DateTime @updatedAt @map("updated_at")

// Relationships

// kbArticles          KnowledgeBaseArticle[]
// kbQuestions         KnowledgeBaseQuestion[]
// kbAnswers           KnowledgeBaseAnswer[]
// kbVotes             KnowledgeBaseVote[]
// blogPosts           BlogPost[]
// blogComments        BlogComment[]
// announcements       Announcement[]
// events              Event[]
// eventRegistrations  EventRegistration[]
// eventCheckIns       EventCheckIn[]
// mentorProfile       MentorProfile?
// studentProblems     StudentProblem[]
// mentoringSessions   MentoringSession[] @relation("MentoringSessions")
// studentSessions     MentoringSession[] @relation("StudentSessions")
// chatMessages        ChatMessage[]
// pastHackProjects    PastHackProject[]
@@map("users")
}

enum UserRole {
ADMIN
ORGANIZER
MENTOR
PARTICIPANT
}
